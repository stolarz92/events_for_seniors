%h2 Sign up
.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
  .panel.panel-info
    .panel-heading
      .panel-title Sign up form
    .panel-body
      .row
        .col-xs-10.col-xs-offset-1
          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal', role: 'form'}) do |f|
            = f.error_notification
            = f.input :email,placeholder: 'user@domain.com', required: true,
            autofocus: true, class: 'form-control'
            = f.input :password, label: 'Hasło',required: true, hint: 'Hasło musi mieć przynajmniej 4 znaki', class: 'form-control'
            = f.input :password_confirmation, label: 'Potwierdź hasło', required: true, hint: 'Wpisz to samo hasło, które wpisałeś/wpisałaś powyżej', class: 'form-control'
            = f.button :submit, "Sign up", class: 'btn btn-info'
            = render "devise/shared/links"


