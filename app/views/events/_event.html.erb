<div class="row event-list-item">
	<div class="well col-md-12">
		<div class="row">
			<div class="col-xs-4 col-sm-3">
		      <%= image_tag event.image.url(:thumb), :class => "img-responsive" %>
		  </div>
		  <div class="col-xs-8 col-sm-9">
					<%= link_to '<i class="fa fa-eye"></i> Show'.html_safe, [event.city, event], class: 'btn btn-info btn-lg pull-right' %>
		      <h3><%= event.name %></h3>
		      <p><%= event.category.name %></p>
		      <p><%= fa_icon 'map-marker lg' %> <%= event.location %></p>
		      <p><%= fa_icon 'calendar lg' %> <%= I18n.localize(event.start_date, :format => ("%d %B %Y")) %> -
		        <%= I18n.localize(event.end_date, :format => ("%d %B %Y")) %></p>
		      <p><%= fa_icon 'clock-o lg' %> <%= event.starts_at.strftime("%H:%M") %> - <%= event.ends_at.strftime("%H:%M") %></p>
            <p>Wysiłek:
              <% if event.effort == '1' %>
                  <%= fa_icon 'circle lg' %>
                  <%= fa_icon 'circle-o lg' %>
                  <%= fa_icon 'circle-o lg' %>
              <% elsif event.effort == '2' %>
                  <%= fa_icon 'circle lg' %>
                  <%= fa_icon 'circle lg' %>
                  <%= fa_icon 'circle-o lg' %>
              <% else %>
                  <%= fa_icon 'circle lg' %>
                  <%= fa_icon 'circle lg' %>
                  <%= fa_icon 'circle lg' %>
              <% end %></p>
            <p>Koszt: <% if event.cost == '1' %> Bezpłatne
                  <% elsif event.cost == '2' %> Płatne
                  <% end %></p>
		  </div>
		</div>
	</div>
</div>
