<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :date %>
      <%= f.text_field :date,
                 class: 'form-control',
                 placeholder: 'Kliknij, aby wybrać datę',
                 :data => {provide: 'datepicker'}
      %>
    </div>
    <div class="form-group">
      <%= f.label :starts_at %>
      <%= f.time_field :starts_at, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :ends_at %>
      <%= f.time_field :ends_at, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :location %>
      <%= f.text_area :location, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :city %>
      <%= collection_select(:event,
                              :city_id,
                              City.all,
                              :id,
                              :name,
                              {prompt: 'Wybierz miasto'},
                              {class: 'form-control'}) %>
    </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
