<div class="filter-box">
  <h4>Koszt</h4>
  <ul class="filter">
    <% cost.each do |cost| %>
        <% if cost.id.to_s == params[:cost_id] %>
            <li class="category-active">
        <% else %>
            <li>
        <% end %>
        <%= link_to cost.name, events_path(
                               :search => params[:search],
                               :start_date => params[:start_date],
                               :category_id => params[:category_id],
                               :effort_id => params[:effort_id],
                               :cost_id => cost.id
                       ),
                    class: 'filter-button'
        %></li>
    <% end %>
    <% if params[:cost_id] %>
        <%= link_to 'Wyczyść filtr', events_path(
                                        :search => params[:search],
                                        :start_date => params[:start_date],
                                        :category_id => params[:category_id],
                                        :effort_id => params[:effort_id],
                                        :cost_id => nil
                                )
        %>
    <% end %>
  </ul>
</div>