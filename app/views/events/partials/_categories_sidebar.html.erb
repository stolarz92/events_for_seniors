<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Filtrowanie</h3>
  </div>
  <div class="panel-body">
    <ul>
      <% @categories.each do |category| %>
              <li class="<%=  "category-active" if category.id == params[:category_id] %>">
                <%= link_to category.name, events_path(
                                                   :search => params[:search],
                                                   :date => params[:date],
                                                   :category_id => category.id
                                           )
              %></li>
          <% end %>
    </ul>
  </div>
</div>
