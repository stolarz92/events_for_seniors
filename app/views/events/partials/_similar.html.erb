<h2>Podobne wydarzenia</h2>
<% @similar_events.each do |event| %>
    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
      <h4 class="event-name"><%= link_to event.name, city_event_path(@city, event) %></h4>
      <%= link_to city_event_path(@city, event) do %>
          <%= image_tag event.image(:thumb) %>
      <% end %>
    </div>
<% end %>