<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Twoje wyszukiwanie</h3>
  </div>
  <div class="panel-body">
    <%= form_tag events_path, :method => 'get', id: 'search-form' do %>
        <div class="form-group">
          <label class="sr-only" for="place">Name</label>
          <%#= autocomplete_field_tag :search, params[:search], autocomplete_city_name_cities_path %>
          <%= text_field_tag :search,
                             params[:search],
                             class: 'form-control',
                             placeholder: 'KrakÃ³w',
                             type: 'search',
                             data: {
                                     autocomplete: homepage_autocomplete_city_name_path
                             }
          %>
        </div>
        <div class="form-group">
          <label class="sr-only" for="date">Email</label>
          <%= text_field_tag :start_date,
                             nil,
                             placeholder: params[:start_date],
                             class: 'form-control date',
                             :data => {
                                     provide: 'datepicker'
                             }
          %>
        </div>
        <%# submit_tag '<i class="fa fa-search"></i> Szukaj'.html_safe, :name => nil, class: 'btn btn-info btn-lg' %>
        <button type="submit" class="btn btn-lg btn-info"><i class="fa fa-search"></i> Szukaj</button>
    <% end %>
  </div>
</div>
<script type="text/javascript">
    $( document ).ready(function() {
        $(".date").datepicker({
            'language': "pl",
            'todayHighlight': true,
            'format': 'dd-mm-yyyy',
            'autoclose': true
        })
    });
</script>